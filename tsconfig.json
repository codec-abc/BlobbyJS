{
    "compilerOptions": 
    {
        "target": "es6",
        "noImplicitThis" : true,
        "noImplicitReturns" : true,
        "noImplicitAny" : true,
        "strictNullChecks" : true,
        "module": "amd",
        "outDir": "build/"
    },
    "atom": 
    {
        "rewriteTsconfig": true
    },
    "exclude": 
    [
        "typings",
        "node_modules"
    ]
}
